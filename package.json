{
  "name": "hikkaku-workspace",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "docs:dev": "bun --cwd docs dev",
    "docs:build": "bun --cwd docs build",
    "docs:preview": "bun --cwd docs preview",
    "lint": "turbo run lint",
    "fmt": "biome check --fix --unsafe",
    "typecheck": "turbo run typecheck",
    "ref:build": "bun run --cwd packages/skill build-blocks",
    "ref:check": "bun run --cwd packages/skill build-blocks:check",
    "build": "turbo run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "turbo": "^2.8.6"
  },
  "packageManager": "bun@1.3.9",
  "dependencies": {
    "@types/node": "^25.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260211.1",
    "sb3-types": "^0.1.16"
  }
}